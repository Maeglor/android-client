<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/scan_qr_nav_graph.xml"
            app:startDestination="@id/prePostQrScannedFragment">

    <activity android:id="@+id/mainActivity" android:name="org.shadowrunrussia2020.android.MainActivity"
              android:label="MainActivity"/>

    <fragment android:id="@+id/prePostQrScannedFragment" android:name="org.shadowrunrussia2020.android.qr.PrePostQrScannedFragment"
              android:label="pre_post_qr_scanned" tools:layout="@layout/pre_post_qr_scanned">
        <action android:id="@+id/action_start_scan"
                app:destination="@id/scanQrFragment"/>
    </fragment>

    <fragment android:id="@+id/scanQrFragment" android:name="org.shadowrunrussia2020.android.qr.ScanQrFragment"
              android:label="fragment_scan_qr" tools:layout="@layout/fragment_scan_qr"/>

    <action android:id="@+id/action_global_back_to_main"
            app:destination="@id/mainActivity"
            app:popUpTo="@+id/scan_qr_nav_graph.xml"
            app:popUpToInclusive="true"/>
</navigation>